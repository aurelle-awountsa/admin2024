FROM ubuntu:latest
#image ubuntu


#mise a jour image et installation de bind9 

RUN apt update && apt full-upgrade -y 
RUN apt install bind9 bind9utils dnsutils net-tools -y
RUN apt install iputils-ping -y
RUN apt install nano -y


# activation IPv4:Modifie les options de configuration de BIND9 pour n'utiliser que l'IPv4 et pour ex√©cuter le service en tant qu'utilisateur 'bind'.


RUN sed -i 's/OPTIONS=.*/OPTIONS="-4 -u bind"/' /etc/default/bind9

# copie des fichiers de configuration de la machine locale vers image docker

COPY named.conf /etc/bind/named.conf
COPY l2-8.ephec-ti.be /etc/bind/l2-8.ephec-ti.be
 

#CREATION DU FICHIER DE LOG

RUN mkdir /var/log/named
RUN touch /var/log/named/misc.log /var/log/named/query.log
RUN chown -R root:bind /var/log/named



#ouverture du port 53 en udp de image
EXPOSE 953/tcp
EXPOSE 953/udp


WORKDIR /etc/bind

#demarrage du serveur dns 
CMD named -c /etc/bind/named.conf -g